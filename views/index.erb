<html>
  <head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <title>Nearest customers</title>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#searhForm").submit(function (event) {
                event.preventDefault();
                $.get(
                    $(this).attr("action"),
                    $(this).serialize(),
                    function (response) {
                        $("#result").html(response);
                    }
                )
            })
        });
    </script>
  </head>
  <body>
    <div id="result"></div>
    <form action="find" method="get" id="searhForm">
      <!-- GPS coordinates for Intercom's Dublin office as default 53.339428, -6.257664. -->
      <label>
        Latitude:
        <input type="text" name="latitude" value="53.339428">
      </label>
      <label>
        Longitude:
        <input type="text" name="longitude" value="-6.257664">
      </label>
      <br />
      <label>
        Maximum distance (kilometers):
        <input type="text" name="max_distance" value="100">
      </label>
      <br />
      <input type="submit" title="Find">
    </form>
  </body>
</html>